<!-- views/reset-email-template.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Password Reset Email</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f5faff;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 600px;
      margin: 20px auto;
      padding: 20px;
      background-color: #ffffff;
      border-radius: 10px;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .header {
      background-color: #4a90e2;
      color: #ffffff;
      padding: 20px;
      border-radius: 10px 10px 0 0;
    }

    .content {
      padding: 20px;
    }

    .button {
      display: inline-block;
      padding: 12px 24px;
      background-color: #4a90e2;
      color: #ffffff;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .button:hover {
      background-color: #357ebd;
    }

    p {
      margin-bottom: 15px;
    }

    strong {
      font-weight: bold;
    }

    em {
      font-style: italic;
    }

    .logo {
      max-width: 200px;
      display: block;
      margin: 0 auto;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="header">
      <img src="https://youcanfly-s3-bucket.s3.amazonaws.com/logo/Logo.png" alt="Logo" class="logo">
    </div>
    <div class="content">
      <p>Hello <strong>
          <%= username %>
        </strong>,</p>
      <p>We received a request to <em>reset your password</em>. If you didn't make this request, you can ignore this
        email.</p>
      <p>Click the button below to reset your password:</p>
      <a href="<%= resetLink %>" class="button"
        style="color: #ffffff !important; text-decoration: none; border-radius: 5px; background-color: #4a90e2; display: inline-block; padding: 12px 24px;">Reset
        Password</a>
      <p>If the button above does not work, you can also <em>copy and paste</em> the following link into your browser:
      </p>
      <p>
        <%= resetLink %>
      </p>
      <p>This reset link will expire in <strong>24 hours</strong>.</p>
      <p>Thank you,</p>
      <p>Your Application Team</p>
    </div>
  </div>
</body>

</html>